{
  "name": "wp-color-app",
  "version": "0.1.0",
  "description": "Android APP to save color as wallpaper",
  "maintainers": [
    "Kirill Molchanov <k03.mad@gmail.com"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k03mad/wp-color-app.git"
  },
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@react-native-clipboard/clipboard": "1.16.3",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-fs": "2.20.0",
    "react-native-safe-area-context": "5.6.1",
    "react-native-toast-message": "2.3.3",
    "react-native-view-shot": "4.0.3",
    "react-native-wheel-color-picker": "1.3.1"
  },
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/preset-env": "7.28.3",
    "@babel/runtime": "7.28.4",
    "@biomejs/biome": "2.2.4",
    "@react-native-community/cli": "20.0.2",
    "@react-native-community/cli-platform-android": "20.0.2",
    "@react-native/babel-preset": "0.81.1",
    "@react-native/metro-config": "0.81.1",
    "@react-native/typescript-config": "0.81.1",
    "@types/jest": "30.0.0",
    "@types/react": "19.1.0",
    "husky": "9.1.7",
    "typescript": "5.9.2"
  },
  "scripts": {
    "setup": "npm run clean:node && npm i",
    "start": "npm run clean:android && react-native run-android",
    "clean:node": "rm -rf ./node_modules || true",
    "clean:android": "cd android && ./gradlew clean && rm -rfv .gradle .kotlin ./app/.cxx ./app/build && cd ..",
    "build": "npm run build:arm64 && npm run build:copy",
    "build:arm64": "cd android && ./gradlew assembleRelease -PreactNativeArchitectures=arm64-v8a && cd ..",
    "build:copy": "cp android/app/build/outputs/apk/release/app-release.apk ~/Yandex/Download/wp-arm64-v8a-$(date +%Y%m%d_%H%M%S).apk",
    "lint": "npm run lint:biome && npm run lint:tsc",
    "lint:biome": "biome check",
    "lint:biome:fix": "biome check --write",
    "lint:tsc": "tsc --noEmit",
    "prepare": "husky"
  }
}
